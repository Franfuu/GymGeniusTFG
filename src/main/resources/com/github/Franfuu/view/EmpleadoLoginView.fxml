<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.github.Franfuu.controllers.EmpleadoLoginController"
            prefHeight="600.0" prefWidth="800.0"
            styleClass="root-pane">

    <!-- Contenedor principal centrado -->
    <StackPane AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">

        <VBox alignment="CENTER" maxWidth="500" spacing="20">
            <TabPane styleClass="login-tabs">
                <Tab text="Iniciar Sesión" closable="false">
                    <VBox styleClass="form-container">
                        <Label text="Acceso Empleados" styleClass="form-title"/>

                        <VBox styleClass="input-group">
                            <Label text="Email" styleClass="input-label"/>
                            <TextField fx:id="loginEmail" promptText="Introduce tu email" styleClass="input-field"/>
                        </VBox>

                        <VBox styleClass="input-group">
                            <Label text="Contraseña" styleClass="input-label"/>
                            <PasswordField fx:id="loginPassword" promptText="Introduce tu contraseña"
                                           styleClass="input-field"/>
                        </VBox>

                        <HBox alignment="CENTER" spacing="20">
                            <Button text="INICIAR SESIÓN" onAction="#handleLogin" styleClass="action-button"/>
                            <Button text="VOLVER" onAction="#volverAWelcome" styleClass="secondary-button"/>
                        </HBox>
                    </VBox>
                </Tab>

                <Tab text="Registrarse" closable="false">
                    <ScrollPane fitToWidth="true" styleClass="scroll-pane">
                        <VBox styleClass="form-container">
                            <Label text="Registro Nuevo Empleado" styleClass="form-title"/>

                            <VBox styleClass="input-group">
                                <Label text="Nombre" styleClass="input-label"/>
                                <TextField fx:id="registerName" promptText="Introduce tu nombre" styleClass="input-field"/>
                            </VBox>

                            <VBox styleClass="input-group">
                                <Label text="Apellido" styleClass="input-label"/>
                                <TextField fx:id="registerLastName" promptText="Introduce tu apellido"
                                           styleClass="input-field"/>
                            </VBox>

                            <VBox styleClass="input-group">
                                <Label text="Email" styleClass="input-label"/>
                                <TextField fx:id="registerEmail" promptText="Introduce tu email" styleClass="input-field"/>
                            </VBox>

                            <VBox styleClass="input-group">
                                <Label text="Teléfono" styleClass="input-label"/>
                                <TextField fx:id="registerPhone" promptText="Introduce tu teléfono"
                                           styleClass="input-field"/>
                            </VBox>

                            <VBox styleClass="input-group">
                                <Label text="Fecha de contratación" styleClass="input-label"/>
                                <DatePicker fx:id="registerContractDate" promptText="Fecha de contratación"
                                            styleClass="input-field"/>
                            </VBox>
                            
                            <VBox styleClass="input-group">
                                <Label text="Contraseña" styleClass="input-label"/>
                                <PasswordField fx:id="registerPassword" promptText="Crea una contraseña"
                                               styleClass="input-field"/>
                            </VBox>

                            <VBox styleClass="input-group">
                                <Label text="Confirmar Contraseña" styleClass="input-label"/>
                                <PasswordField fx:id="registerConfirmPassword" promptText="Confirma tu contraseña"
                                               styleClass="input-field"/>
                            </VBox>

                            <VBox styleClass="input-group">
                                <Label text="Foto de perfil (opcional)" styleClass="input-label"/>
                                <HBox spacing="10">
                                    <Button text="Seleccionar imagen" onAction="#handleSelectImage"
                                            styleClass="secondary-button"/>
                                    <Label fx:id="selectedImageLabel" text="Ningún archivo seleccionado"
                                           styleClass="file-label"/>
                                </HBox>
                            </VBox>

                            <HBox alignment="CENTER" spacing="20">
                                <Button text="REGISTRARSE" onAction="#handleRegister" styleClass="action-button"/>
                                <Button text="VOLVER" onAction="#volverAWelcome" styleClass="secondary-button"/>
                            </HBox>
                        </VBox>
                    </ScrollPane>
                </Tab>
            </TabPane>
        </VBox>
    </StackPane>
</AnchorPane>