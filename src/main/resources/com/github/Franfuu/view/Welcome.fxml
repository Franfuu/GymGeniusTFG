<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="anchorPane" styleClass="root-pane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.Franfuu.controllers.WelcomeController">
   <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <VBox alignment="CENTER" spacing="20">
         <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title-text" text="GymGenius" textAlignment="CENTER">
            <font>
               <Font size="36.0" />
            </font>
         </Text>

         <ImageView fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@Portada.png" />
            </image>
         </ImageView>

         <HBox alignment="CENTER" spacing="30">
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#setEmployButton" prefHeight="38.0" prefWidth="130.0" styleClass="welcome-button" text="Empleado">
               <font>
                  <Font size="17.0" />
               </font>
            </Button>
         
            <Button fx:id="registerButton" mnemonicParsing="false" onAction="#setClientButton" prefHeight="38.0" prefWidth="129.0" styleClass="welcome-button" text="Cliente">
               <font>
                  <Font size="17.0" />
               </font>
            </Button>
         </HBox>
      </VBox>
   </StackPane>
</AnchorPane>
